/* Global */
* {
	padding: 0em;
	margin: 0em;
}

html {
	width: 100%;
}

body {
	width: 100%;
	font-family: tahoma, helvetica, sans-serif;
	font-size: 8pt;
	color: #000000;
	background-color: #707070;
	background-image: url(linen6.png);
}

/* Common elements */

a {
	color: #0F356D; /*151515*/
	text-decoration: none;
	border: none;
}
a:hover {
	text-decoration: none;
	color: #777777;
}

h1,h2,h3,h4 {
	margin: 5px 0px;
	margin-bottom: 10px;
}

h2 {
	text-align: center;
}

h3 {
	margin-top: 8px;
}

h4 {
	font-size: 8pt;
}

p {
	margin: 10px 5px;
}

li {
	margin: 5px 15px;
}

input {
	padding: 2px 3px;
}

textarea {
	padding: 2px 3px;
	margin-bottom: 10px; /*this and the next 2 lines new as of 3/3/2009 */
	margin-top: -3px;
	max-width: 100%;
	*max-width: 98.6% /* IE only */
}

img {
	border: none;
}

/* Styles generated by the BBCode parser */

span.size1 { font-size:0.75em; }
span.size2 { font-size:1em; }
span.size3 { font-size:1.25em; }
span.size4 { font-size:1.5em; }
span.size5 { font-size:1.75em; }
span.size6 { font-size:2em; }
span.size7 { font-size:2.25em; }
span.size8 { font-size:2.5em; }
span.size9 { font-size:2.75em; }
span.size10 { font-size:3em; }

ul.thin { margin:0px 0px 0px 25px; padding:0px; }
ul.thin li { margin:0px 0px; padding:0px; }

/* Layout (Every page) */

#header {
	width: 100%;
	min-width:924px;
	padding: 0px 0 0 0;
	margin-bottom: 15px;
}

#content {

/*  The old way: relative */
/*	width: 94%;
	min-width:740px;
	background-color: #f1f1f1;
	margin: 0px auto 0px auto;
	padding: 0.6em;
	border: 1px solid #000000;
	overflow: hidden; */

/*  The new way: absolute */
	min-width:850px;
	background-color: #f1f1f1;
	margin: 0px 30px 0px 30px;
	padding: 0.6em;
	border: 1px solid #000000;
	overflow: hidden;
}

#footer {
	margin-top: 10px;
	width: 100%;
	text-align: center;
	color: #FFFFFF;
	padding: 1em 0;
}

#logo {
	width: 216px;
	height: 77px;
	/* width: 230px;
	height: 110px; */
	background: url('what.png') no-repeat top left;
	position: absolute;
	left: 18px;
	top: 14px;
}

#logo a {
	border: none;
	width: 228px;
	margin-top: 6px;
	margin-left: 31px;
	height: 99px;
	display: block;
}

#logo a:hover {
	border: none;
}

#menu {
	height: 33px;
	text-align: right;
	font-size: 10.5pt;
	margin: 0px 0px 0px 0px;
	padding-right: 5px;
	*padding-right: 9px; /* IE only */
	font-weight: bold;
	color: #4880c8;
	padding-top: 80px;
	/* min-width: 8800px; */
}

#menu ul li {
	margin: 0px;
	display: inline;
	margin-top: 0.8em;
}

#menu ul li a {
	padding: 0.1em 0.8em; /* was 1.1 em 1.0% but the links were off */
	color: #f6f6f6; /* #f1f1f1; */
	/* text-transform: uppercase; */
}

#menu ul li a:hover {
	color: #111111; /* #111111; */
}
#menu ul li a:active {
	outline: none;
}

#userinfo {
	float: right;
	text-align: right;
	color: #ffffff;
	padding: 5px 15px 5px 0px;
	/* position: absolute; */
	margin-bottom: -200px;
	right: 0px;
	/* width: 880px; */
	/* min-width: 880px; */
}

#userinfo_stats {
	color: #dddddd;
}

#userinfo img {
	margin-top: -5px;
}

#userinfo ul li {
	position: relative;
	display: inline;
	margin: 0 0.1em;
	line-height: 20px;
	vertical-align: middle;
	padding: 0px;
}

#userinfo a, #userinfo a:visited {
	text-decoration: underline;
	color: #dddddd;
}
#userinfo a:hover {
	text-decoration: none;
}

#userinfo_username {
	display:inline;
	margin-right: 10px;
}

#userinfo_major {
	display:inline;
	clear: right;
}

/* Ratio Colors */

.r00 { color: #FF0000; }
.r01 { color: #FF1300; }
.r02 { color: #FF1300; }
.r03 { color: #FF2600; }
.r04 { color: #FF4C00; }
.r05 { color: #FF5E00; }
.r06 { color: #FF5E00; }
.r07 { color: #FF7100; }
.r08 { color: #FF9700; }
.r09 { color: #FFAA00; }
.r10 { color: #74C42E; }
.r20 { color: #418B00; }
.r50 { color: #418B00; }
.r99 { color: #418B00; }

#userinfo_username .brackets:before {
	content: "[";
	text-decoration: underline;
}

#userinfo_username .brackets:after {
	content: "]";
	text-decoration: underline;
}

#userinfo_major .brackets:before {
	font-weight: bold;
	content: "[";
	text-decoration: underline;
}

#userinfo_major .brackets:after {
	font-weight: bold;
	content: "]";
	text-decoration: underline;
}


#searchbars {
	border-top: 1px solid #000000;
	border-bottom: 1px solid #000000;
	padding: 5px 0px 3px 0px;
	*padding: 4px 0px 2px 0px;
	background-color: #f0f0f0; /*#f1f1f1;*/
	text-align: center;
}

#searchbars form {
	display: inline;
}

#searchbars input {
	background-color: #ffffff;
	border: 1px solid #000000;
	font-size: 0.9em;
	color: #222;
	position: relative;
	top: -1px;
}

#searchbars ul li {
	margin: 0px;
	display: inline;
}

#discog_table {
	margin-top: 1px;
	*margin-top: 10px; /* ie only */
}

li.searchbars {
	font-size: 11px;
	float: left;
	margin: 16px 0px 12px 25px;
}

.alertbar {
	border-top: 1px solid #000;
	padding: 3px 0px 6px 0px;
	background-color: #ff0000;
	text-align: center;
	color: #ECDEDE;
	font-weight: bold;
}
.alertbar a {
	color: #ECDEDE;
	text-decoration: underline;
}
.alertbar a:hover {
	color: #FFF;
	text-decoration: underline;
}

.blend {
	border-top: 1px solid #C1965C;
	background-color: #d9eaf1;
}

/* IE doesn't appear to like a simple display:none in our header. Random things start fucking up pretty badly. */
.hidden {
	position: absolute;
	left: -10000px;
}

input.hidden {
	position: absolute;
	display: none;
}

/* Layout (Any page) */


.thin {
	width: 850px;
	margin-left:auto;
	margin-right:auto;
	margin-bottom: 15px;
}


div.linkbox {
	text-align:center;
	padding: 5px;
	color: #000000;
	margin-top: 5px;
	margin-bottom: 5px;
}

div.linkbox a {
	color: #3D78BC;
}

div.linkbox a:hover {
	color: #00196b;
}

.center {
	text-align: center;
}

.right {
	text-align: right;
}

.min_padding {
	padding: 0px;
	margin: 0px 0px;
}

p.min_padding {
	margin: 2px 0px;
}

.pad {
	padding: 1em;
}

.vertical_space {
	margin-bottom: 10px;
}

.box {
	font-size: 8pt;
	background-color: #EAEAEA;
	border: 1px solid #666666;
	margin-top: 10px;
	margin-bottom: 15px;
}

.pad h3, .pad h4, .padbox h3, .padbox h4 {
	margin-top: 0px;
	padding-top: 0px;
}

.sidebar {
	float: right;
	width: 250px;
	height: 100%;
	*margin-top: 10px; /* a star, as in *margin-top, would allow this to be added only in IE */
}

.sidebar .box {
	margin: 0px 5px 10px 5px;
}

.head {
	padding: 4px;
	background: #3D639B repeat-x;
	border-bottom: 1px solid #666;
	font-weight:bold;
	color: #fff;
}

.body {
	padding: 3px 10px 10px 10px;
}

/* .main_column {
	margin: 0px 255px 10px 0px;
	width: 590px;
} */

.main_column {
	margin: 0px 255px 10px 5px;
	max-width: 2800px;
}


.main_column .box, .main_column table {
	margin-bottom: 10px;
}

.tags {
	padding: 0px 0px 0px 20px;
	font-style: normal; /* italic; */
	color: #333333;
	padding-top: 2px;
}

.tags a {
	color: #333333;
	padding-top: 2px;
}

.tags a:hover {
	color: #777777;
	text-decoration: underline;
}

.noborder {
	border: none;
}

ul.nobullet {
	list-style-type: none;
	padding-bottom: 7px; /* new 3/22/2009 */
}

table {
	width: 100%;
	border-collapse: collapse;
	border: 1px solid #111111; /* #2860b0; */
}

tr {
	background-color: #DBE8ED; /* #B6D2DE; */
}

tr.rowa {
	background-color: #DBE8ED; /* D9EAF1 */ /* #C2DFE7; */
}

tr.rowb {
	background-color: #DBE8ED; /* #F1F1F1; */
}

td {
	border: 1px solid #111111; /* #000000; */
	padding: 5px;
	text-align: left;
}

.colhead {
	background: #3D639B; /*#2860b0*/ repeat-x;
	font-weight: bold;
	color: #ffffff;
}

.colhead a {
	color: #f1f1f1;
}

.colhead a:hover {
	color: #999999;
}

td.colhead, .colhead td {
	padding-left: 10px;
	padding-right: 10px;
}

.colhead .sign, .colhead_dark .sign {
	padding: 0px 8px 0px 8px;
	vertical-align:middle;
	text-align:center;
	font-size: 12pt;
	font-weight: bold;
}

.colhead_dark {
	background: #3D639B;
	color: #fff;
}

td.label {
	font-weight: bold;
	text-align: left;
	width: 160px;
	/* text-align: center;
	width: 100%; */
}

.box label, .pad label {
	text-align: center;
	width: 100%;
}

table.slice {
	margin-top: -1px;
}

.error_message {
	border-top: 1px solid #2860b0;
	padding: 3px 0px 3px 0px;
	background-color: #C2DFE7;
	text-align: center;
	color: white;
	font-weight: bold;
}

.save_message {
	border: 1px solid #2860b0;
	padding: 3px 0px 3px 0px;
	background-color: #C2DFE7;
	text-align: center;
	color: #2D0B9D;
	font-weight: bold;
}

.elem_error {
	border: 3px solid #B00D0D;
}

.hide {
	display:none;
}

/* Layout (home page) */

ul.stats li {
	margin-bottom: -3px;
	*margin-bottom: 0px; /* ie only */
	padding: 0px 0px 0px 0px;
}

ul.stats {
	margin-bottom: 3px;
}

li.artist_main {  /* new 3/31/2009 */
	margin-bottom: -2px;
}

ul.poll li {
	padding: 0px 0px 0px 10px;
	margin: 0px;
}

ul.poll li.graph {
	margin-bottom: 3px;
	padding-left: 20px;
}



/* Layout (Torrents page) */

.show_torrents {
	width: 28px;
	height: 28px;
	background: url('show.png') no-repeat center center;
}

.hide_torrents {
	width: 28px;
	height: 28px;
	background: url('hide.png') no-repeat center center;
}

.show_torrents_link {
	border: none;
	width: 28px;
	height: 28px;
	display: block;
}

.filter_torrents {
	width:750px;
	margin-left:auto;
	margin-right:auto;
	margin-bottom:0px;
}

.filter_torrents .submit {
	text-align:right;
	padding-top:5px;
}

.filter_torrents .inputtext {
	width:400px;
}

.filter_torrents .smaller {
	width:300px;
}

.filter_torrents .smallest {
	width:50px;
}

.filter_torrents option {
	padding-right:8px;
}

.cat_list {
	margin-top: -1px;
}

.cat_list tr td {
	border:none;
}

.select_container {
	margin:5px;
}

.torrent_table {
	margin-top: 1px;
	*margin-top: 10px; /* ie only, added 4-29-2008 */
	margin-bottom: 8px;
}

.collage {
	margin-top: 1px;
	*margin-top: 10px; /* ie only, added 4-29-2008 */
	margin-bottom: 20px;
}

.torrent_table tr {
	vertical-align:top;
}

.group {
	font-weight: bold;
	background-color: #DBE8ED; /* #D2E2E8; */ /* #D9EAF1 */;
	padding: 0px 0px 0px 50px;
}
.group_torrent {
	background-color:#F7F7F7; /*#D9EAF1;*/
}

.group_torrent span {
	float:right;
}

.group_torrent td[colspan$='3'] {
	padding-left: 77px;
}

.torrent {
	font-weight:bold;
	background-color:#D9EAF1;
}
.torrent span {
	font-weight:normal;
	float:right;
}

.torrent_table div.tags {
	font-weight:normal;
}

.torrent_table tr .center {
	vertical-align:middle;
	text-align:center;
}

.torrent_table td .small {
	width:20px;
}

.torrent_table a img {
	border:none;
}

.torrent_table table {
	width:96.6%; /* 94% */
	margin:10px 0px 10px 10px;
}

.torrent_table table .colhead_dark {
	background-image: none;
	background-color: #2860b0;
}

.nobr {
	white-space:nowrap;
}

.advanced_search {
	text-align:right;
	padding-bottom:5px;
}

/* Layout (Forums) */

table.forum_post {
	margin: 10px 0px;
}

table.forum_post td {
	border: 1px solid #2860b0;
}

td.avatar {
	width: 150px;
	padding: 0px;
}

table.forum_post td.body {
	width:690px;
}

table.forum_post .colhead_dark {
	color: #b9b9b9;
}

table.forum_post .colhead_dark a {
	font-weight: bold;
	color: #ffffff;
}

table.forum_post .colhead_dark a:hover {
	color: #2a2a2a;
}

table.forum_post .colhead_dark td[colspan$='2'] span {
	font-weight: bold;
}

blockquote {
	margin: 10px;
	/* margin: 10px 25px 10px 10px; */
	padding: 10px;
	border: 1px dashed #2860b0;
}

/* Layout (Inbox) */

tr.unreadpm {
	background-color: #ff5050;
}

/* Layout (Permission Page) */

.permission_head {
	width:400px;
	margin-left:auto;
	margin-right:auto;
}

.permissions {
	width:930px;
	margin-left:auto;
	margin-right:auto;
}

.permission_container {
	float:left;
	width:300px;
	padding:5px;
}
.permission_container input {
	margin:0px 3px 5px 0px;
	vertical-align:top;
}

.submit_container {
	clear:both;
	text-align:right;
}

/* Layout (Invite tree) */

ul .invitetree {
	margin: 0px 0px 0px 25px;
}

.invitetree li {
	list-style: none;
	margin: 10px 2px;
}

/* Layout (MISC) */

#left_poll {
	width: 2px;
	height: 9px;
	background: url('bar_left.gif') no-repeat center center;
	float: left;
	margin: 0px;
	padding: 0px;
}

#center_poll {
	height: 9px;
	background: url('bar.gif') repeat;
	float: left;
	margin: 0px;
	padding: 0px;
}

#right_poll {
	width: 2px;
	height: 9px;
	background: url('bar_right.gif') no-repeat center center;
	float: left;
	margin: 0px;
	padding: 0px;
}

.curtain {
	display: none;
	position: fixed;
	top: 0%;
	left: 0%;
	width: 100%;
	height: 100%;
	background-color: black;
	z-index:1001;
	-moz-opacity: 0.8;
	opacity:.80;
	filter: alpha(opacity=80);
}

.lightbox {
	display: none;
	position: fixed;
	text-align: center;
	top: 5%;
	left: 5%;
	width: 90%;
	height: 90%;
	padding: 0px;
	z-index:1002;
	overflow: auto;
}

